{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["three", "node"],
    "resolveJsonModule": true,
    "allowJs": false // Disallow JavaScript files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.js"] // Exclude JavaScript files
}